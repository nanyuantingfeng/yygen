{
  "types": "./types/index.d.ts",
  "scripts": {
    "optimize": "npm run build:lib & npm run build:esm & npm run build:types",
    "build:lib": "BABEL_ENV=lib babel src --out-dir dist/lib --extensions \".tsx,.ts,.jsx,.js\"",
    "build:esm": "BABEL_ENV=esm babel src --out-dir dist/esm --extensions \".tsx,.ts,.jsx,.js\"",
    "build:types": "tsc --emitDeclarationOnly -p tsconfig.types.json"
  },
  "peerDependencies": {
    "@babel/runtime": "^7"
  },
  "dependencies": {
    "reflect-metadata": "^0",
    "tslib": "^1"
  },
  "devDependencies": {
    "typescript": "^3"
  }
}
